{
  "name": "yofix",
  "version": "1.0.4",
  "description": "AI-powered visual issue detection and auto-fix for web applications",
  "main": "dist/index.js",
  "bin": {
    "yofix": "./dist/cli/yofix-cli.js"
  },
  "scripts": {
    "postinstall": "playwright install chromium",
    "build": "tsc && ncc build dist/index.js -o dist-final --source-map --external sharp && cp -r dist-final/* dist/ && rm -rf dist-final && chmod +x dist/cli/yofix-cli.js",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:local": "ts-node test/local-runner.ts",
    "test:action": "act -j visual-test --secret-file .env.test",
    "test:action:local": "ts-node test/test-action-locally.ts",
    "pretest:action:local": "yarn build",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "release": "./scripts/release.sh"
  },
  "keywords": [
    "visual-testing",
    "auto-fix",
    "ai",
    "github-action",
    "visual-regression",
    "playwright",
    "yofix",
    "ui-testing",
    "automated-fixes",
    "claude-ai",
    "screenshot-testing"
  ],
  "author": {
    "name": "YoFix Team",
    "email": "support@yofix.dev",
    "url": "https://yofix.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yofix/yofix.git"
  },
  "bugs": {
    "url": "https://github.com/yofix/yofix/issues"
  },
  "homepage": "https://github.com/yofix/yofix#readme",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@anthropic-ai/sdk": "^0.20.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "@playwright/test": "^1.41.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^12.0.0",
    "ioredis": "^5.3.2",
    "pixelmatch": "^5.3.0",
    "playwright": "^1.41.2",
    "pngjs": "^7.0.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@types/babel__traverse": "^7.20.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.39",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "optionalDependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@playwright/mcp": "^0.0.32"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/**/*",
    "action.yml",
    "README.md"
  ],
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}

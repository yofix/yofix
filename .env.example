# YoFix Local Development Environment
# Copy this to .env.local and fill in your actual values

# =============================================================================  
# REQUIRED: AI API KEY
# =============================================================================
# Get your Claude API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here
# Alternative name (same key, either works):
ANTHROPIC_API_KEY=your-claude-api-key-here

# =============================================================================
# STORAGE CONFIGURATION (Choose ONE option)
# =============================================================================

# Option 1: Firebase Storage (Recommended)
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS=your-base64-encoded-service-account-json
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Option 2: AWS S3 Storage (Alternative)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# S3_BUCKET=your-yofix-bucket

# =============================================================================
# GITHUB INTEGRATION (Optional for local testing)
# =============================================================================
# Only needed if testing GitHub PR integration locally
# Get from: https://github.com/settings/personal-access-tokens
GITHUB_TOKEN=your-github-personal-access-token

# =============================================================================
# LOCAL TESTING CONFIGURATION
# =============================================================================
# Website to test (can be localhost:3000 or any URL)
TEST_WEBSITE_URL=http://localhost:3000

# Authentication for testing (optional)
TEST_AUTH_EMAIL=test@example.com
TEST_AUTH_PASSWORD=your-test-password
# Login URL options: 
# - "auto-detect" (AI will find the login page automatically)
# - "/login" (manual path)
# - "/signin", "/auth/login", etc. (custom path)
TEST_LOGIN_URL=auto-detect

# Test settings
TEST_VIEWPORTS=375x667,768x1024,1920x1080
TEST_ROUTES=/,/about,/contact
TEST_MAX_ROUTES=10

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Show browser during testing (true/false)
YOFIX_HEADLESS=false
# Debug output (true/false)  
YOFIX_DEBUG=true
# Slow down actions for debugging (milliseconds)
YOFIX_SLOW_MO=500